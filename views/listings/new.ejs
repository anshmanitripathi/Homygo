<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-8 offset-2">
    <body>
        <h2>Create a new Listing : </h2>
        <form action="/listings" method="POST">
            <div>
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" type="text" placeholder="Enter Title" class="form-control">
            </div>

            <div>
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="description" class="form-control"></textarea>
            </div>

            <div>
                <label for="image" class="form-label">Img URL</label>
                <input name="listing[image]" type="text" placeholder="Enter URL" class="form-control">
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <div>
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" type="number" placeholder="Enter price" class="form-control">
                    </div>
                </div>
                <div class="mb-3 col-md-8">
                    <div>
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" type="text" placeholder="Enter country" class="form-control">
                    </div>
                </div>
    
                
            </div>

            <div>
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" type="text" placeholder="Enter location" class="form-control">
            </div>
            <br>
            <button class="btn btn-dark">add</button>
        </form>
    </body>
</div>
</div>    