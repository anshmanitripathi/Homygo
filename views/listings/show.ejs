<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row">
    <div class="col-8 offset-2">
        <h3>Listing Details : </h3>
        <br>
        <div class="card" >
            <img src="<%= listing.image %>" class="card-img-top" alt="..." style="height: 18rem;">
            <div class="card-body">
            <h5 class="card-title"><b><%= listing.title %></b></h5>
            <p class="card-text"><%= listing.description %></p>
            <p>&#8377; <%= listing.price.toLocaleString("en=IN") %></p>
            <p><%= listing.country %></p>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit this Listing</a>
                </div>
                <div class="mb-3 col-md-8">
                    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-primary">Delete this Listing</button>
                    </form>
                </div>
            </div>
            </div>
        </div>
        
    </div>
    </div>
</body>